@model IEnumerable<AdoptifySystem.TimeSheet>

@{
    ViewBag.Title = "EmployeeTimesheet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="main">
    <h2>Employee Timesheet</h2>

    <p>
        <a class="btn btn-success" href=" @Url.Action("") ">Download PDF Report</a>
    </p>
    <table class="table">
        <tr>
            <th>
                Check In
            </th>
            <th>
                Check Out
            </th>
            <th>
                Employee Name
            </th>
            <th>
                Employee Surname
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Check_in)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Check_out)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee.Emp_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee.Emp_Surname)
                </td>
                @*<td>
                        @Html.ActionLink("Edit", "Edit", new { id=item.TimeSheet_ID }) |
                        @Html.ActionLink("Details", "Details", new { id=item.TimeSheet_ID }) |
                        @Html.ActionLink("Delete", "Delete", new { id=item.TimeSheet_ID })
                    </td>*@
            </tr>
        }

    </table>
    </div>
