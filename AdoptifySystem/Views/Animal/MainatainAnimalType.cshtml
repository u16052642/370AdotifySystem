@model AdoptifySystem.Animal_Type

@{
    ViewBag.Title = "MaintainAnimalType";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="main">
    @using (Html.BeginForm())
    {

        <div class="form-horizontal">
            <div>
                <div class="col-sm-10" style='background-color: #2ba6cb'><h1 style="color:white;">Maintain AnimalType</h1></div>
            </div>
        </div>
        @Html.HiddenFor(model => Model.Animal_Type_ID)
        <div class="form-horizontal">
            <h4 style="color:red">@ViewBag.errormessage</h4>
            <hr />
            <div class="form-group">
                <label>Animal Type Name</label>
                <div class="col-md-10">
                    <input type="text" class="form-control" id="AnimalTypename" value="@Model.Animal_Type_Name" name="Animal_Type_Name" placeholder="Animal Type Name">
                </div>
            </div>

            <div class="form-group">
                <label>Animal Cost</label>
                <div class="col-md-10">
                    <input type="text" class="form-control" id="AnimalTypeCost" value="@Model.Price" name="Animal_Type_Cost" placeholder="Animal Type Cost">
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" name="button" value="Cancel" class="btn btn-warning">Cancel</button>
                    <button type="submit" name="button" value="Save" class="btn btn-success float-right">Save</button>
                </div>
            </div>
        </div>
    }
    <div id="main">
        @section scripts{
            <script>
                $(function () {
                    var successMessage = '@TempData["SuccessMessage"]'
                    if (successMessage != '')
                        alertify.success(successMessage);
                });
                $(function () {
                    var successMessage = '@TempData["EditMessage"]'
                    if (successMessage != '')
                        alertify.warning(successMessage);
                });
                $(function () {
                    var successMessage = '@TempData["DeleteMessage"]'
                    if (successMessage != '')
                        alertify.error(successMessage);
                });

            </script>
        }
