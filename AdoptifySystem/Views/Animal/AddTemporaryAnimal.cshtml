@model AdoptifySystem.Models.nickeymodel.Innovation
@{
    ViewBag.Title = "AddTemporaryAnimal";
}

<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

    <style>
        .column {
            box-sizing: border-box;
        }

        body {
            margin: 0;
        }




        .topnav a:hover {
            background-color: #ddd;
            color: black;
        }


        .column {
            float: left;
            width: 33.33%;
            padding: 15px;
        }

        .row:after {
            content: "";
            display: table;
            clear: both;
        }

        .row {
            display: flex;
        }

        .column {
            width: 100%;
        }
    </style>

</head>
<div id="main">
    @using (Html.BeginForm("AddTemporaryAnimal", "Animal", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <body>

            <div>
                <div class="col-sm-10" style='background-color: #2ba6cb'><h1 style="color:white;">Add Animal</h1></div>
            </div>
            <div class="row">

                @*start1*@
                <div class="column">
                    <div class="text-center">
                        <img src="http://ssl.gstatic.com/accounts/ui/avatar_2x.png" class="avatar img-circle img-thumbnail" alt="avatar">
                        <h6>Upload an animal photo...</h6>
                        <input type="file" name="animalPicture" class="text-center center-block file-upload">
                    </div>

                    <div class="form-group">
                        <label><b>Animal Type</b></label><br />
                        <div class="col-md-10">
                            <select name="Animal_Type_ID">
                                @if (Model.animalTypes != null)
                                {
                                    foreach (var item in Model.animalTypes)
                                    {
                                        <option value="@item.Animal_Type_ID">@item.Animal_Type_Name</option>
                                    }
                                }
                                else
                                {
                                    <option>Go Add Animal Type</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label><b>Cross Breed?</b></label><br />
                        <div class="custom-control custom-radio custom-control-inline">
                            <input type="radio" onclick="yesnoCheck()" name="Cross_Breed" value="True" id="Yes">
                            <label for="customRadio1"><b>Yes</b></label>
                        </div>
                        <div class="custom-control custom-radio custom-control-inline">
                            <input type="radio" onclick="yesnoCheck()" name="Cross_Breed" value="False" id="No">
                            <label for="customRadio2"><b>No</b></label>
                        </div>
                    </div>

                    <div class="col-xs-6">
                        <div class="r"></div>
                        <label><b>Animal Breed</b></label>
                        <div class="col-md-2">
                            @if (Model != null)
                            {
                                if (Model.breedTypes != null)
                                {
                                    <select name="Animal_Breed_ID">

                                        @foreach (var item in Model.breedTypes)
                                        {
                                            <option value="@item.Animal_Breed_ID">@item.Animal_Breed_Name</option>
                                        }
                                        }
                                        else
                                        {
                                        <option>Go add Animal Breed</option>
                                        }
                                    </select>
                                }
                            }
                        </div>
                        <div class="col-md-2">

                            @if (Model != null)
                            {
                                if (Model.breedTypes != null)
                                {
                                    <select id="second_breed" name="Animal_Breed" style="display:none;">

                                        @foreach (var item in Model.breedTypes)
                                        {
                                            <option value="@item.Animal_Breed_ID">@item.Animal_Breed_Name</option>
                                        }
                                        }
                                        else
                                        {
                                        <option>Go add Animal Breed</option>
                                        }
                                    </select>
                                }
                            }

                        </div>


                        <br />
                        <div class="col-xs-6">
                            <label><b>Castrated?</b></label><br />
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" name="Animal_Castration" value="True" id="Yes">
                                <label for="customRadio1"><b>Yes</b></label>
                            </div>
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" name="Animal_Castration" value="False" id="No">
                                <label for="customRadio2"><b>No</b></label>
                            </div>
                            <div class="form-group">
                            </div>

                            <div class="col-xs-6">
                                <label><b>Animal Name</b></label><br />
                                <input type="text" name="Animal_Name" placeholder="Enter Animal Name">
                            </div>
                            <br />
                            <div class="form-group">
                                <label><b>Animal Description</b></label><br />
                                <input type="text" name="Animal_Description" placeholder="Enter Animal Description">
                            </div>

                            <div class="col-xs-6">
                                <label><b>Animal Age</b></label><br />
                                <input type="number" name="Animal_Age" min="0" placeholder="Enter Animal Age">
                            </div>
                            <br />
                            <div class="form-group">
                                <label><b>Animal Gender</b></label><br />
                                <div class="custom-control custom-radio custom-control-inline">
                                    <input type="radio" name="Animal_Gender" value="Male" id="Male">
                                    <label for="customRadio1"><b>Male</b></label>
                                </div>
                                <div class="custom-control custom-radio custom-control-inline">
                                    <input type="radio" name="Animal_Gender" value="Female" id="Female">
                                    <label for="customRadio2"><b>Female</b></label>
                                </div>
                            </div>

                            <div class="form-group">
                                <label><b>Animal Size</b></label><br />
                                <div class="custom-control custom-radio custom-control-inline">
                                    <input type="radio" name="Animal_Size" value="Small" id="Small">
                                    <label for="customRadio1"><b>Small</b></label>
                                </div>
                                <div class="custom-control custom-radio custom-control-inline">
                                    <input type="radio" name="Animal_Size" value="Medium" id="Medium">
                                    <label for="customRadio2"><b>Medium</b></label>
                                </div>

                                <div class="custom-control custom-radio custom-control-inline">
                                    <input type="radio" name="Animal_Size" value="Large" id="Large">
                                    <label for="customRadio2"><b>Large</b></label>
                                </div>
                            </div>

                            <div class="form-group">
                                <label><b>Entry Date Of Animal</b></label><br />
                                <input type="date" name="Animal_Entry_Date" class="form-control" placeholder="MM/DD/YY" />
                            </div>



                            <div class="form-group">
                                <label><b>Sterilized?</b></label><br />
                                <div class="custom-control custom-radio custom-control-inline">
                                    <input type="radio" name="Animal_Sterilization" value="True" id="Yes">
                                    <label for="customRadio1"><b>Yes</b></label>
                                </div>
                                <div class="custom-control custom-radio custom-control-inline">
                                    <input type="radio" name="Animal_Sterilization" value="False" id="No">
                                    <label for="customRadio2"><b>No</b></label>
                                </div>
                            </div>

                            <div class="col-xs-6">
                                <label><b>Current Location</b></label><br />
                                <input type="text" name="Animal_Location" class="form-control" placeholder="Enter Current Location">
                            </div>


                        </div>
                        @*end1*@


                        @*start2*@
                        <div class="column">
                            <div>
                                <div class="col-sm-10" style='background-color: #2ba6cb'><h2 style="color:white;">Animal Medical</h2></div>
                            </div>
                            <div class="col-xs-6">
                                <label><b>Animal Microchip Code</b></label><br />
                                <input type="text" name="Animal_Microchip_Code" placeholder="Animal  Microchip Code">
                            </div>

                            <div class="col-xs-6">
                                <label><b>Implanteers Pin Number</b></label><br />
                                <input type="text" name="Implanters_PIN_Number" placeholder="Implanteers Pin Number">
                            </div>

                            <div class="col-xs-6">
                                <label><b>Animal Coat</b></label><br />
                                <input type="text" name="Animal_Coat" placeholder="Animal Coat">
                            </div>

                            <div class="col-xs-6">
                                <label><b>Owner Name</b></label><br />
                                <input type="text" name="Owner_Name" placeholder="Enter Owner Name" required>
                            </div>

                            <div class="col-xs-6">
                                <label><b>Owner Contact Number</b></label><br />
                                <input type="number" class="form-control" maxlength="10" placeholder="Owner Contact Number">
                            </div>

                            <div class="col-xs-6">
                                <label><b>Date Of Implant</b></label><br />
                                <input type="date" name="Date_of_Implant" class="form-control" placeholder="MM/DD/YY" required>
                            </div>

                            <div class="col-xs-6">
                                <label><b>Owner Address</b></label><br />
                                <input type="text" name="Owner_Address" class="form-control" placeholder="Enter Owner Address" required>
                            </div>


                            <div class="form-group">
                                <button type="submit" name="button" value="Save" onsubmit="myPassword" class="btn btn-success float-right">Save</button>
                                <button type="button" name="button" value="Cancel" class="btn btn-warning">Cancel</button>
                            </div>



                        </div>
                        @*start2*@


                    </div>
                </div>
            </div>
        </body>

    }
    </div>
    <script>
    function yesnoCheck() {
        if (document.getElementById('Yes').checked) {
            document.getElementById('second_breed').style.display = 'block';
        }
        else document.getElementById('second_breed').style.display = 'none';

    }
    </script>
    @section scripts{
        <script>
        $(function () {
            var successMessage = '@TempData["SuccessMessage"]'
            if (successMessage != '')
                alertify.success(successMessage);
        });
         $(function () {
            var successMessage = '@TempData["EditMessage"]'
            if (successMessage != '')
                alertify.warning(successMessage);
         });
        $(function () {
            var successMessage = '@TempData["DeleteMessage"]'
            if (successMessage != '')
                alertify.error(successMessage);
        });

        </script>
    }
