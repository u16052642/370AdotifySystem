@model List<AdoptifySystem.Animal_Type>
@{
    ViewBag.Title = "SearchAnimalType";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("SearchAnimalType", "Animal", FormMethod.Get))
{
    <div id="main">
        <div class="" style="text-align:center;padding-left:120px">
            <div class="col-sm-10" style='background-color: #2ba6cb'><h1 style="color:white;">Search Animal Type</h1></div>
        </div>
        <h1>@ViewBag.errormessage</h1>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            @Html.ActionLink("MaintainAnimalType", "MaintainAnimalType", null, new { }, new { @style = "color: white", @class = "btn btn-warning" })
        </div>
        @Html.ActionLink("AddAnimalType", "AddAnimalType", null, new { @style = "color: # fff" }, new { @class = "btn btn-success" })
        @using (Html.BeginForm("SearchAnimalType", "Animal", FormMethod.Get))
        {
            <div class="row">
                <div class="col-md-5">
                    <h4><span style="font-weight:bold">Search Criteria:<span class="label label-default"></span></span></h4>
                    @Html.TextBox("search", "", new { @name = "txtSearch", @placeholder = "Search Criteria" })
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <button type="submit" value="Search" class="btn btn-primary">Search</button>
                </div>
            </div>
        }
        <br />
        <table class="table table-bordered">
            <tr class="thead-light">

                <th>
                    Name
                </th>
                <th>
                    Description
                </th>
                <th>
                    Action
                </th>
            </tr>

            @if (Model == null)
            {
                <tr>
                    <td colspan="8">
                        No results found
                    </td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.Animal_Type_Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "MaintainAnimalType", new { id = item.Animal_Type_ID }, new { @class = "btn btn-warning" }) |

                            <button class="btn moreinfo" data-toggle="modal" data-target="#@item.Animal_Type_ID">More info </button> |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Animal_Type_ID }, new { @class = "btn btn-danger" }) |
                        </td>
                    </tr>
                    <div class="modal fade" id="@item.Animal_Type_ID" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLongTitle">@item.Animal_Type_Name</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <span class="value">ID:</span>
                                    @Html.DisplayFor(modelItem => item.Animal_Type_ID) <br />
                                    <span class="value">Name:</span>
                                    @Html.DisplayFor(modelItem => item.Animal_Type_Name) <br />
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    @Html.ActionLink("Maintain", "MaintainAnimalType", new { id = item.Animal_Type_ID }, new { @style = "color: white", @class = "btn btn-warning" })
                                </div>
                            </div>
                        </div>
                    </div>

                }
            }
        </table>
        }
    </div>
}

    @section scripts{
        <script>
        $(function () {
            var successMessage = '@TempData["SuccessMessage"]'
            if (successMessage != '')
                alertify.success(successMessage);
        });
         $(function () {
            var successMessage = '@TempData["EditMessage"]'
            if (successMessage != '')
                alertify.warning(successMessage);
         });
        $(function () {
            var successMessage = '@TempData["DeleteMessage"]'
            if (successMessage != '')
                alertify.error(successMessage);
        });

        </script>
    }
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>













