@model IEnumerable<AdoptifySystem.Mecidal_Card>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="main">
    <div class="" style="text-align:center;padding-left:120px">
        <h1>Medical card Information</h1>
    </div>

    <div class="newButton">
        @Html.ActionLink("Add", "Create", "Mecidal_Card", null, new { @class = "btn btn-success 	glyphicon glyphicon-plus" })
    </div>

    <table class="table">
        <tr>
            <th>
                Animal
            </th>
            <th>
                Vet Appointment
            </th>
            <th>
                Diagnosis Details
            </th>
            <th>
                Arrival from Vet Date
            </th>
            <th>
                Next Appointment Date
            </th>
            <th>
                Upload Medical Card
            </th>
            <th>
                Animal Treatment
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Animal.Animal_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Vet_Appointment.Vet_Appointment_ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Diagnosis_Details)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Arrival_from_Vet)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Next_Appointment_Date_)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MedicalCard)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Animal_Treatment)
                </td>
               
                <td>
                    @Html.DisplayFor(modelItem => item.Vet_Appointment.Vet_Appointment_ID)
                </td>
                <td>
                    @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                    <button class="btn btn-info glyphicon glyphicon-info-sign" data-toggle="modal" data-target="#@Html.DisplayFor(modelItem => item.Animal_ID)"> More Info</button>
                </td>
            </tr>

            <div /id="@Html.DisplayFor(modelItem => item.Animal_ID)" class="modal fade" role="dialog">
            <div class="modal-dialog">
                <div class="info_card">
                    <div class="card_inner">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h2> Medical Card Details of :</h2>
                        <h2> @Html.DisplayFor(modelItem => item.Animal.Animal_Name)  </h2>
                        <hr />
                    </div>
                    <div class="data">

                        <span class="value">Diagnosis Details:</span>  @Html.DisplayFor(modelItem => item.Diagnosis_Details) <br />

                        <span class="value">Arrival from Vet Date:</span>@Html.DisplayFor(modelItem => item.Arrival_from_Vet)<br />

                        <span class="value">Animal Treatment (Yes/No):</span>@Html.DisplayFor(modelItem => item.Animal_Treatment)<br />
                        
                        <br />
                        <button type="button" class="btn btn-primary glyphicon glyphicon-remove" data-dismiss="modal"><i></i>Close</button>
                    </div>
                </div>

            </div>
    </div>
        }

        </table>
        @Html.ActionLink("Refresh", "Index", "Mecidal_Card", null, new { @class = "btn btn-primary 	glyphicon glyphicon-refresh" })
        </div>
